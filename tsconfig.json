{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["./src/core/domain/types/*"],
      "@/models/*": ["./src/core/domain/models/*"],
      "@/adapters/*": ["./src/core/interfaces/adapters/*"],
      "@/useCases/*": ["./src/core/interfaces/useCases/*"],
      "@/services/*": ["./src/core/services/*"],
      "@/graphql/*": ["./src/infra/graphql/*"],
      "@/sdks/*": ["./src/infra/sdks/*"],
      "@/api/*": ["./src/infra/api/*"],
      "@/mocks/*": ["./src/infra/mocks/*"],
      "@/components/*": ["./src/ui/components/*"],
      "@/primitives/*": ["./src/ui/primitives/*"],
      "@/layouts/*": ["./src/ui/layouts/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
